{
  "name": "terramar/packages",
  "description": "Packages extends Composer Satis with a management interface and integrations for GitLab and GitHub",
  "license": "MIT",
  "type": "application",
  "require": {
    "php": ">=5.6.0",
    "ext-pcntl": "*",
    "ext-posix": "*",
    "ext-json": "*",
    "nice/framework": "~1.1",
    "nice/security": "~1.0",
    "nice/doctrine-orm": "~1.0",
    "nice/twig": "2.0.x-dev",
    "nice/templating": "1.0.x-dev",
    "chrisboulton/php-resque": "dev-master",
    "doctrine/migrations": "~1.2",
    "symfony/debug": "~2.7",
    "symfony/console": "~2.7",
    "symfony/process": "~2.7",
    "symfony/yaml": "~2.7",
    "composer/satis": "^1.0",
    "composer/composer": "1.4.3",
    "m4tthumphrey/php-gitlab-api": "^9.4",
    "knplabs/github-api": "~1.4",
    "php-http/guzzle6-adapter": "^1.1",
    "datatables/datatables": "^1.10",
    "twbs/bootstrap": "3.3.7",
    "fortawesome/font-awesome": "^4.7",
    "components/jquery": "^3.2",
    "gentle/bitbucket-api": "^1.1",
    "sami/sami": "~1.4",
    "cweagans/composer-patches": "^1.6"
  },
  "config": {
    "platform": {
      "php": "7.2"
    },
    "component-dir": "vendor",
    "sort-packages": true
  },
  "require-dev": {
    "phpunit/phpunit": "~3.7"
  },
  "autoload": {
    "psr-4": {
      "Terramar\\Packages\\": "src/",
      "Composer\\": "lib/Composer/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "3.2-dev"
    },
    "patches": {
      "composer/composer": {
        "Generate the GitLab source URLs as https instead of ssh (See https://github.com/composer/satis/issues/419#issuecomment-466875285)":
          "https://gist.githubusercontent.com/bradjones1/10df177e5edb03004b8bf5bde077db77/raw/68284ed6c70c221345736c7fd0a7ba990ef8c46d/composer-source.patch"
      }
    }
  },
  "minimum-stability": "beta",
  "prefer-stable": true
}
